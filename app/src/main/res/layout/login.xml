

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rl_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_medium"
        android:background="@drawable/splash">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/email_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/AppTheme1"
            android:textColorHint="@color/white"
            app:hintAnimationEnabled="true"


          >

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name"
                android:maxLength="64"
                android:textColorHint="@color/white"
                android:inputType="textEmailAddress"
                android:textColor="@color/white" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/lay_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_lay"
            android:layout_marginTop="@dimen/margin_12dp"
            android:textColorHint="@color/white"
            app:hintAnimationEnabled="true">

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:maxLength="32"
                android:textColorHint="@color/white"
                android:inputType="textPassword"
                android:textColor="@color/white" />


        </android.support.design.widget.TextInputLayout>



        <Button
            android:id="@+id/but_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lay_password"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@color/yellow_btn"
            android:shadowColor="@color/light_gray"
            android:text="@string/login"
            android:textSize="@dimen/text_size_large" />
        </RelativeLayout>


    </RelativeLayout>
